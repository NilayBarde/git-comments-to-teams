# Teams webhook URL (required)
TEAMS_WEBHOOK_URL=https://your-org.webhook.office.com/webhookb2/...

# GitLab config (for MR comment notifications)
GITLAB_USERNAME=your-gitlab-username
GITLAB_USER_ID=12345
GITLAB_WEBHOOK_TOKEN=optional-secret-token

# GitHub config (for PR comment notifications)
GITHUB_USERNAME=your-github-username
GITHUB_WEBHOOK_SECRET=optional-secret

# Server port (optional, defaults to 3000)
PORT=3000

# Testing: set to 'true' to receive notifications for your own comments
ALLOW_SELF_COMMENTS=false
